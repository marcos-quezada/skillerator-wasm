@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<SemButton OnClick="@(IncrementCount)" Icon="Icon.Plus" IconLabeled="false">Click me</SemButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
