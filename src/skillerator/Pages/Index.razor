@page "/"

  <section class="background">
    <div class="content-wrapper">
      <SemGrid>
        <SemGridRow>
          <SemGridColumn Wide="GridUnit.Two"></SemGridColumn>
          <SemGridColumn Wide="GridUnit.Ten" Classes="@(new[] { ColumnClass.Center_Aligned })">
              <img src="logo_skillerator_pfade_weiss.png" class="responsive logo"/>
          </SemGridColumn>
        </SemGridRow>
        <SemGridRow>
          <SemGridColumn Wide="GridUnit.One"></SemGridColumn>
          <SemGridColumn Wide="GridUnit.Eleven" Classes="@(new[] { ColumnClass.Center_Aligned })">
              <h1 class="white-title">Coming Soon</h1>
          </SemGridColumn>
        </SemGridRow>
      </SemGrid>
    </div>
  </section>
  <section class="background">
    <div class="content-wrapper">
      <SemGrid>
        <SemGridRow>
          <SemGridColumn Wide="GridUnit.Two"></SemGridColumn>
          <SemGridColumn Wide="GridUnit.Nine" Classes="@(new[] { ColumnClass.Center_Aligned })">
              <h2 class="white-title">
                  We bring your employee to Germany: Easy, transparent and compliant
              </h2>
          </SemGridColumn>
        </SemGridRow>
        <SemGridRow>
          <SemGridColumn Wide="GridUnit.Four"></SemGridColumn>
          <SemGridColumn Wide="GridUnit.Five" Classes="@(new[] { ColumnClass.Center_Aligned })">
              <SemButton Color="ButtonColor.Orange" Size="Size.Big">
                  GET IN TOUCH
              </SemButton>
          </SemGridColumn>
        </SemGridRow>
      </SemGrid>
    </div>
  </section>
  <section class="background">
    <div class="content-wrapper">
      <SemGrid>  
        <SemGridRow>
          <SemGridColumn Wide="GridUnit.Two"></SemGridColumn>
          <SemGridColumn Wide="GridUnit.Nine" Classes="@(new[] { ColumnClass.Center_Aligned })">
              <p class="white-text">
                  Skillerator is the up and coming Startup for employee mobility. You found a great match for a position in your company but don't know how to handle all the bureaucracy? We have the solution for you.
                  You can go on with you day and Skillerators automization takes care of all deadlines and to dos keeping you in charge and up to date at all times.
              </p>
          </SemGridColumn>
        </SemGridRow>
        <SemGridRow>
          <SemGridColumn Wide="GridUnit.Four"></SemGridColumn>
          <SemGridColumn Wide="GridUnit.Five" Classes="@(new[] { ColumnClass.Center_Aligned })">
              <SemButton Color="ButtonColor.Orange" Size="Size.Big">
                  LEARN MORE
              </SemButton>
          </SemGridColumn>
        </SemGridRow>
      </SemGrid>
    </div>
  </section>
  <section class="background">
    <div class="content-wrapper">
      <SemGrid>
        <SemGridRow>
          <SemGridColumn Wide="GridUnit.Two"></SemGridColumn>
          <SemGridColumn Wide="GridUnit.Ten" Classes="@(new[] { ColumnClass.Center_Aligned })">
              <div class="iframe-container">
                  <iframe class="responsive-iframe" src="https://www.youtube.com/embed/dHYDVMkFHFc" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              </div>
          </SemGridColumn>
        </SemGridRow>  
      </SemGrid>
    </div>
  </section>